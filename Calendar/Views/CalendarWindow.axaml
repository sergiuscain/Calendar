<Window
    x:Class="Calendar.Views.CalendarWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Выбор даты"
    Width="300"
    Height="400"
    d:DesignHeight="450"
    d:DesignWidth="800"
    CanResize="False"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical">
        <Calendar Name="DatePicker" SelectedDatesChanged="OnSelectedDateChanged" />
        <Button HorizontalAlignment="Center" Click="OnSelectButtonClick">Выбрать</Button>
    </StackPanel>

</Window>
